<div class='contents-row'>
  <div class='base-login'>
    <%= form_with model: @user,url:user_session_path,class:'login-main',local: true do |f|%>
    
      <div class='form-header'>
        <h1 class='form-header-text'>
          会員情報入力
        </h1>
      </div>
      <%= render 'devise/shared/error_messages', model: f.object %>
      <div class='form-group'>
        <div class='form-text-wrap'>
          <label class='form-text'>メールアドレス</label>
          <span class='indispensable'>必須</span>
        </div>
        <%= f.email_field :email,class:'input-default',placeholder:"PC.携帯どちらでも可",autofocus: true%>
      </div>
      <div class='form-group'>
        <div class='form-text-wrap'>
          <label class='form-text'>パスワード</label>
          <span class='indispensable'>必須</span>
        </div>
        <%= f.password_field :password,class:'input-default',placeholder:"6文字以上の半角英数字"%>
        <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
      </div>
      <div class='login-btn'>
        <%= f.submit "登録",class:"login-touhu-btn"%>
      </div>
    <% end%>
  </div>
</div>